/* Hearth TUI Theme */

/* Global */
Screen {
    background: $surface;
}

/* Header */
#header {
    dock: top;
    height: 1;
    background: $primary;
    color: $text;
    padding: 0 1;
}

/* Main layout */
#main {
    height: 1fr;
}

/* Grid view - takes most of the space */
#grid {
    width: 3fr;
    border: solid $primary;
    padding: 0 1;
}

#grid.hidden {
    display: none;
}

/* Sidebar */
#sidebar {
    width: 1fr;
    min-width: 30;
    max-width: 40;
    border-left: solid $primary;
}

/* Agent list */
#agent-list {
    height: auto;
    max-height: 50%;
    padding: 1;
    border-bottom: solid $primary;
}

/* Cell info */
#cell-info {
    height: 1fr;
    padding: 1;
}

/* Footer */
Footer {
    background: $primary;
}

/* === Agent Stream Panel === */
#agent-stream {
    display: none;
    width: 3fr;
    border: solid $primary;
}

#agent-stream.active {
    display: block;
}

#agent-stream.hidden {
    display: none;
}

.stream-header {
    height: auto;
    padding: 0 1;
    background: $surface-darken-1;
}

.stream-header-content {
    width: 100%;
    height: auto;
}

.stream-status {
    height: auto;
    max-height: 2;
    padding: 0 1;
    background: $surface-darken-1;
    border-bottom: solid $primary;
}

.status-content {
    width: 100%;
    height: auto;
}

.stream-narrative {
    height: 1fr;
    padding: 1;
    scrollbar-gutter: stable;
}

/* Agent-specific accent colors */
#agent-stream.ember {
    border: round #f97316;
}

#agent-stream.sage {
    border: round #a78bfa;
}

#agent-stream.river {
    border: round #38bdf8;
}
